            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.listActivity.ListDebtActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".View.profilesActivity.ProfileUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>