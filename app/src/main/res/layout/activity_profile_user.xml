<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ProfileDebtActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded"
            android:src="@drawable/ic_person_green" />


        <EditText
            android:id="@+id/first_name_user"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/rounded_text"
            android:gravity="center"
            android:hint="@string/identite"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20sp"
            tools:text="Julien" />

        <EditText
            android:id="@+id/last_name_user"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_text"
            android:gravity="center"
            android:hint="@string/identite"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20sp"
            tools:text="Jennequin" />

        <EditText
            android:id="@+id/email_user"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_text"
            android:gravity="center"
            android:hint="@string/identite"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20sp"
            tools:text="email" />

        <EditText
            android:id="@+id/birthday_user"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_text"
            android:gravity="center"
            android:hint="@string/identite"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20sp"
            tools:text="19/11/1999" />

        <EditText
            android:id="@+id/user_country"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_text"
            android:gravity="center"
            android:hint="@string/identite"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20sp"
            tools:text="France" />


    </LinearLayout>

    <Button
        android:id="@+id/save_user_profil"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_btn"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/log_out_user_profil"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.8"
        android:background="@drawable/rounded_uncolor"
        android:gravity="center"
        android:text="@string/log_out"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_user_profil" />

</androidx.constraintlayout.widget.ConstraintLayout>